<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="30 seconds">

    <!-- Configure Console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%date %-5level %class{32}:%L - %message%n</pattern>
        </encoder>
    </appender>

    <!-- Configure File LOG -->
    <appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/chatbot/aibot/log/kakao/kakao.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/chatbot/aibot/log/kakao/kakao-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %class{32}:%L - %msg%n</pattern>
        </encoder>
    </appender>

	<logger name="m2u.eyelink.aibot" level="debug" additivity="false">
        <appender-ref ref="File"/>
    </logger>
    <root level="info">
        <appender-ref ref="File"/>
    </root>
</configuration>
