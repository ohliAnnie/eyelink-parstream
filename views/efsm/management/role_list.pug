extends ../layout-type01
block style  
  link(rel='stylesheet', type='text/css', href='/efsm/assets/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css')  
block script  
  script(type='text/javascript', src='/efsm/assets/plugins/datatables/media/js/jquery.dataTables.min.js')
  script(type='text/javascript', src='/efsm/assets/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js')
  script(src='/common/assets/scripts/page/table-managed.js')
  script(type='text/javascript', src="/common/scripts/util.js")
  script(type='text/javascript', src='/efsm/scripts/management_role_list.js') 
block content
  .container-fluid
    .page-content
      .breadcrumbs
        h1 Role
        ol.breadcrumb
          li
            a(href='#') Home
          li
            a(href='#') Management
          li.active Role
      .row
        .col-md-12
          .portlet.light
            .portlet-title
              .caption
                span.caption-subject.bold.uppercase.font-green-haze Role List
                span.caption-helper  Detail information about roles
              .tools
                button.btn.btn-default.blue(type='button', onclick="location.href='/management/role/addRole'") Add
            .portlet-body.form
              table#sample_2.table.table-striped.table-bordered.table-hover(style='text-align:center;')
                thead
                  tr
                    th(style='text-align:center;')  
                    th(style='text-align:center;')  Role ID
                    th(style='text-align:center;')  Name                                        
                    th(style='text-align:center;')  List
                    th(style='text-align:center;')  Edit &amp; Delete
                tbody
                  each role in roles
                    tr.odd.gradeX
                      td                        
                         input#id(type='hidden', name='id', value=role._id)                         
                      td  #{role._source.role_id}

                      td  #{role._source.role_name}                                            
                        input#name(type='hidden', name='id', value=role._source.role_name)
                      td
                        a.btn.default.btn-xs.green(href='/management/memList/'+role._source.role_id)                          
                          |  Member List
                      td                        
                        a.btn.default.btn-xs.balck(href='/management/role/'+role._source.role_id)
                           i.fa.fa-edit
                           |  Edit
                        a.btn.default.btn-xs.balck(flag='deleteRole', id=''+role._id, roleid=''+role._source.role_id)
                          i.fa.fa-trash-o
                          |  Delete          
              