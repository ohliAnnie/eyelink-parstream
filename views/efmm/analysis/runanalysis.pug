extends ../efmm-layout01
block style
block script
  script(type='text/javascript', src="/common/scripts/util.js")
  script(type='text/javascript', src='/efmm/scripts/analysis_run.js')
block content
  .container-fluid
    .page-content
      .breadcrumbs
        h1 Run Analysis
        ol.breadcrumb
          li
            a(href='/dashboard') Home
          li
            a(href='#') Analysis
          li.active Run Analysis
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase.font-blue-sharp Set analysis period and Time interval
            .portlet-body(style="padding-top: 50px; padding-bottom: 150px")
              form.form-horizontal.form-bordered(onsubmit="return false;")
                .form-body
                  .form-group
                    label.control-label.col-md-5 Date Range
                    .col-md-3
                      label.control-label.visible-ie8.visible-ie9 Date Range
                      .input-icon
                        .input-group.input-large.date-picker.input-daterange(data-date='2017-01-01', data-date-format='yyyy-mm-dd')
                          input#sdate.form-control(type='text', name='from' value='')
                          span.input-group-addon to
                          input#edate.form-control(type='text', name='to' value='')
                  .form-group
                    label.control-label.col-md-5 Step
                    .col-md-3
                      label.control-label.visible-ie8.visible-ie9 Step
                      .input-icon
                        select.form-control.input-small.select2.form-md-line-input(name='step')
                          option(value='stacking') Stacking
                  .form-group
                    label.control-label.col-md-5 Data Type
                    .col-md-3
                      label.control-label.visible-ie8.visible-ie9 Data Type
                      .input-icon
                        select.form-control.input-small.select2.form-md-line-input(name='data-type')
                          option(value='status') Status
                  .form-group
                    label.control-label.col-md-5 Machine
                    .col-md-3
                      label.control-label.visible-ie8.visible-ie9 Machine
                      .input-icon
                        select.form-control.input-small.select2.form-md-line-input(name='machine')
                          //- TODO : 서버에서 조회해온 값 세팅하도록 수정 필요
                          option(value='all') ALL
                          option(value=100) 100
                          option(value=200) 200
                          option(value=300) 300
                  .form-group
                    label.control-label.col-md-5 Interval
                    .col-md-3
                      label.control-label.visible-ie8.visible-ie9 Interval
                      .input-icon
                        select.form-control.input-small.select2.form-md-line-input(name='interval')
                          option(value=15) 15min
                          option(value=30) 30min
                          option(value=60) 60min
                          option(value=180) 3hour
                          option(value=360) 6hour
                  .form-group
                    label.control-label.col-md-5 Clusters
                    .col-md-3
                      label.control-label.visible-ie8.visible-ie9 Clusters
                      .input-icon
                        select.form-control.input-small.select2.form-md-line-input(name='n_cluster')
                          //- TOOD : 서버에서 동적으로 min, max 값을 가지고 옵션 생성하도록 수정 필요
                          option(value=2) 2
                          option(value=3) 3
                          option(value=4) 4
                          option(value=5) 5
                          option(value=6) 6
                          option(value=7) 7
                          option(value=8) 8
                          option(value=9) 9
                          option(value=10) 10
                  .form-group(style="height: 50px")
                  .form-group
                    #register_tnc_error(style='text-align:center;')
                    .col-md-10
                    .col-md-2
                      button#btn_runanalysis.btn.blue Run Analysis
