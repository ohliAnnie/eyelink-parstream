extends ../layout-reports

block style
	style.
		svg#d3Pie {
			width: 550px;
			height: 370px;
		}
		svg#d3Pie.arc text {
			font: 10px sans-serif;
			text-anchor: middle;
		}
		svg#d3Pie.arc path {
			stroke: #fff;
		}
		svg#myGraph1 {
			width: 550px;
			height: 370px;
		}
		svg#groupBar {
			width: 550px;
			height: 370px;
			font: 10px sans-serif;
		}
		svg#groupBar.axis path, svg#groupBar.axis line {
			fill: none;
			stroke: #000;
			shape-rendering: crispEdges;
		}
		svg#groupBar.bar {
			fill: steelblue;
		}
		svg#groupBar.x.axis path {
			display: none;
		}

block scripts
	script(src='/scripts/d3_pie.js')

block content
	main.layout-contents.padding
		div.layout-contents-inner
			section
				header.page-title
					h1.title Reports
					p.count Total
						mark.report 836
				fieldset.search-container
					legend search
						div.right-content-view
							label(for='') List view
								select.select(name='', id='')
									option(value='') 15
						div.left-content-view
							span.datepicker
								input(type='text', name='daterange', id='', value='')
								select.select(name='', id='')
									option(value='') Zone ID
								select.select(name='', id='')
									option(value='') Node ID
								select.select(name='', id='')
									option(value='') ALL
							button.btn-submit.search(type='submit') SEARCH
				script.
					$(document)
					.ready(function() {
						var start = moment().subtract(29, 'days');
						var end = moment();
						$('input[name="daterange"]')
							.daterangepicker(
							{
								"autoApply" : true,
								startDate : start,
								endDate : end,
								locale : {
									format : 'YYYY-MM-DD'
								}
							},
							function(start, end, label) {
								console.log("New date range selected: ' + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')");
							});
					});
				div.map-container
					div.inner map container
				ul.list-reports
					li
						div.chart
							svg#d3Pie
					li
						div.chart
							svg#myGraph1
							//- script(src='../assets/scripts/libs/sampleOS1.js')
					li
						div.chart
							svg#groupBar
							//- script(src='../assets/scripts/libs/groupBar.js')
					li
						div.chart chart
