<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kt.programk.common.repository.core.AimlLinkMapper">
    <resultMap id="BaseResultMap" type="AimlLink">
        <result column="cate_id" jdbcType="INTEGER" property="cateId"/>
        <result column="main_id" jdbcType="INTEGER" property="mainId"/>
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="comment" jdbcType="VARCHAR" property="comment"/>
    </resultMap>

    <!-- 샘플 상세 조회 -->
    <select id="selectByPrimaryKey" parameterType="AimlLink"
            resultMap="BaseResultMap">
        <![CDATA[
           SELECT cate_id, main_id, id, title, url,comment
           FROM aiml_link
           WHERE id = #{id};
        ]]>
    </select>

    <!-- 샘플 리스트 조회 -->
    <select id="selectList" parameterType="AimlLink"
            resultMap="BaseResultMap">
        <![CDATA[
          SELECT cate_id, main_id, id, title, url,comment
           FROM aiml_link
           WHERE cate_id = #{cateId} AND main_id = #{mainId}
           ORDER BY id ASC;
        ]]>
    </select>

    <!-- 샘플 저장 -->
    <insert id="insert" parameterType="AimlLink">
        <selectKey keyProperty="id" resultType="int" order="BEFORE">
            select nextval('seq_aiml_link')
        </selectKey>
        <![CDATA[
          INSERT INTO aiml_link(cate_id, main_id, id, title, url, comment)
          VALUES (#{cateId}, #{mainId}, #{id}, #{title}, #{url}, #{comment});
        ]]>
    </insert>

    <!-- 샘플 삭제 -->
    <delete id="deleteByPrimaryKey" parameterType="AimlLink">
    	 DELETE FROM aiml_link
         WHERE cate_id = #{cateId}
         <if test='mainId != null and mainId != 0'>
              AND main_id = #{mainId}
         </if>
    </delete>

    <!--샘플 수정 -->
    <update id="updateByPrimaryKeySelective" parameterType="AimlLink">
        UPDATE aiml_link
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="comment != null">
                comment = #{comment},
            </if>
        </set>
        WHERE id = #{id};
    </update>

</mapper>
