<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kt.programk.common.repository.core.AimlRecommendMapper">
    <resultMap id="BaseResultMap" type="AimlRecommend">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="cate_id" jdbcType="INTEGER" property="cateId"/>
        <result column="main_id" jdbcType="INTEGER" property="mainId"/>
        <result column="recommend_input" jdbcType="VARCHAR" property="recommendInput"/>
    </resultMap>

    <!-- 샘플 상세 조회 -->
    <select id="selectByPrimaryKey" parameterType="AimlRecommend"
            resultMap="BaseResultMap">
        <![CDATA[
           SELECT id, cate_id, main_id, recommend_input
           FROM aiml_recommend
           WHERE id = #{id}
        ]]>
    </select>

    <!-- 샘플 리스트 조회 -->
    <select id="selectList" parameterType="AimlRecommend"
            resultMap="BaseResultMap">
        <![CDATA[
          SELECT id, cate_id, main_id, recommend_input
           FROM aiml_recommend
           WHERE cate_id = #{cateId} AND main_id = #{mainId}
           ORDER BY id ASC;
        ]]>
    </select>

    <!-- 샘플 저장 -->
    <insert id="insert" parameterType="AimlRecommend">
        <selectKey keyProperty="id" resultType="int" order="BEFORE">
            select nextval('seq_aiml_recommend')
        </selectKey>
        <![CDATA[
          INSERT INTO aiml_recommend(id, cate_id, main_id, recommend_input)
          VALUES (#{id}, #{cateId}, #{mainId}, #{recommendInput});
        ]]>
    </insert>

    <!-- 샘플 삭제 -->
    <delete id="deleteByPrimaryKey" parameterType="AimlRecommend">
    	 DELETE FROM aiml_recommend
         WHERE cate_id = #{cateId}
         <if test='mainId != null and mainId != 0'>
              AND main_id = #{mainId}
         </if>
    </delete>

    <!--샘플 수정 -->
    <update id="updateByPrimaryKeySelective" parameterType="AimlRecommend">
        UPDATE aiml_recommend
            <set>
            <if test="recommendInput != null">
                recommend_input = #{recommendInput},
            </if>
        </set>
        WHERE id = #{id};
    </update>

</mapper>
