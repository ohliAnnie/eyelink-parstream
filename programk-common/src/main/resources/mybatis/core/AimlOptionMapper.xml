<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kt.programk.common.repository.core.AimlOptionMapper">
    <resultMap id="BaseResultMap" type="AimlOption">
        <result column="cate_id" jdbcType="INTEGER" property="cateId"/>
        <result column="main_id" jdbcType="INTEGER" property="mainId"/>
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="val" jdbcType="VARCHAR" property="val"/>
        <result column="seq" jdbcType="INTEGER" property="seq"/>
    </resultMap>

    <!-- 샘플 상세 조회 -->
    <select id="selectByPrimaryKey" parameterType="AimlOption"
            resultMap="BaseResultMap">
        <![CDATA[
           SELECT id, cate_id, main_id, val, seq
           FROM aiml_option
           WHERE id = #{id};
        ]]>
    </select>

    <!-- 샘플 리스트 조회 -->
    <select id="selectList" parameterType="AimlOption"
            resultMap="BaseResultMap">
        <![CDATA[
          SELECT id, cate_id, main_id, val, seq
           FROM aiml_option
           WHERE cate_id = #{cateId} AND main_id = #{mainId};
        ]]>
    </select>

    <!-- 샘플 저장 -->
    <insert id="insert" parameterType="AimlLink">
        <selectKey keyProperty="id" resultType="int" order="BEFORE">
            select nextval('seq_aiml_option')
        </selectKey>
        <![CDATA[
          INSERT INTO aiml_option(id, cate_id, main_id, val, seq)
          VALUES (#{id}, #{cateId}, #{mainId}, #{val}, #{seq});
        ]]>
    </insert>

    <!-- 샘플 삭제 -->
    <delete id="deleteByPrimaryKey" parameterType="AimlOption">
    	 DELETE FROM aiml_option
         WHERE cate_id = #{cateId}
         <if test='mainId != null and mainId != 0'>
              AND main_id = #{mainId}
         </if>
    </delete>

    <!--샘플 수정 -->
    <update id="updateByPrimaryKeySelective" parameterType="AimlOption">
        UPDATE aiml_option
        <set>
            <if test="val != null">
                val = #{val},
            </if>
        </set>
        WHERE id = #{id};
    </update>

</mapper>
