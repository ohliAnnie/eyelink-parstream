<?xml version="1.0"?>
<queryList>
  <dashboard>
    <query id='selectDashboardLastDate'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {
          "size" : 0,
          "sort" : [{ "dtTransmitted" : "asc" }, { "cid" : "asc" }],
          "aggs" : {
            "cid" : {
              "terms" : { "field" : "cid" },
              "aggs" : {
                "range": {
                  "date_range" : {
                    "field" : "dtTransmitted",
                    "ranges" : [
                      { "from" : #gte0#, "to" : #lte0# },
                      { "from" : #gte1#, "to" : #lte1# },
                      { "from" : #gte2#, "to" : #lte2# },
                      { "from" : #gte3#, "to" : #lte3# },
                      { "from" : #gte4#, "to" : #lte4# },
                      { "from" : #gte5#, "to" : #lte5# },
                      { "from" : #gte6#, "to" : #lte6# }
                    ]
                  },
                  "aggs" : {
                    "date_max" : {
                      "max" : {
                          "field" : "dtTransmitted"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectDashboardLastTime'><![CDATA[
      {
        "index" : #index#,
        "type"  : #type#,
        "body" : {
          "size" : 0,
          "sort" : [{ "cid" : "asc" },{ "dtTransmitted" : "asc" }],
          "aggs" : {
            "cid" : {
              "terms" : { 
                "field" : "cid",
                "order" : { "_term" : "asc" }
               },
              "aggs" : {
                "range": {
                  "date_range" : {
                    "field" : "dtTransmitted",
                    "ranges" : [
                      { "from" : #gte#, "to" : #lte# }
                    ]
                  },
                  "aggs" : {
                    "date_max" : {
                      "max" : {
                          "field" : "dtTransmitted"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectDashboardAlarmCount'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {
          "size" : 0,
          "query" : {          
            "bool": {           
              "must" : [{ "match" : { "sensorType" : "alarm" } }]                
            }
          },
          "aggs" : {
            "flag" : {
              "terms" : { 
                "field" : "flag",
                "order" : { "_term" : "asc" }
               }
            }
          }
        }
      }
    ]]></query>
    <query id='selectDashboardTermData'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {
          "size" : 100,
          "sort": [
            { "dtTransmitted": { "order": "asc" } },
            { "cid": { "order": "asc" } } ],
          "query": {
            "bool": #term#
          }
        }
      }
    ]]></query>
    <query id='selectDashboardDetailData'><![CDATA[
      {
        "index" : #index#,
        "type"  : #type#,
        "body" : {
          "size" : 100,
          "sort": [
            { "cid": { "order": "asc" } },
            { "dtTransmitted": { "order": "asc" } }],
          "query": {
            "bool": #term#
          }
        }
      }
    ]]></query>
    <query id='selectDetailAlarm'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : { 
          "size" : 0, 
          "query" : {          
            "bool": {           
              "must" : [{ "match" : { "sensorType" : "alarm" } }],
              "must_not" : { "match" : { "check" : true } }
            }
          },
          "aggs" : {      
            "flag" : {
              "terms" : {
                "field" : "flag",       
                "order" : { "_term" : "asc" } 
              },
              "aggs" : {  
                "cid": {        
                  "terms" : {     
                    "field" : "cid",      
                    "order" : { "_term" : "asc" }
                  },
                  "aggs" : { 
                    "max_date" : {
                      "max" : { "field" : "dtTransmitted" }
                    }
                  }
                }
              }
            }
          } 
        }
      }      
    ]]></query>
    <query id='selectDetailAlarmList'><![CDATA[
      {
        "index" : #index#,
        "type"  : #type#,
        "body" : { 
          "size" : 10,
          "sort": { "dtTransmitted": { "order": "desc" } },
          "query" : {          
            "bool": {           
              "must" : [
                { "match" : { "sensorType" : "alarm" } },
                { "match" : { "flag" : #flag# } },
                { "match" : { "cid" : #cid# } }
              ],
              "must_not" : { "match" : { "check" : true } }
            }
          } 
        }
      }      
    ]]></query>
    <query id='updateAlarm'><![CDATA[
      {
        "index" : #index#,
        "type"  : #type#,
        "id" : #id#,
        "body" : {     
          "doc": {
            "check" : true     
          } 
        }
      }      
    ]]></query>
    <query id='selectDashboardInfo'><![CDATA[
      {
        "index" : #index#,
        "type"  : #type#,
        "body" : {
          "query" : {
            "bool": {
              "filter" : {
                "term" : { "data.dtSensed" : #date# }
              },
              "must" : {
                "match" : { "cid" : #cid# }
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectDashboardInfoStatus'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {
          "size" : 10000,          
          "query" : {
            "bool": {
              "filter" : {
                "range" : {
                  "dtTransmitted" : { "gte" : #gte#, "lte" : #lte# }
                }
              },
              "must" : [
                { "match" : { "cid" : #cid# } },
                { "match" : { "sensorType" : "motor" } }]
            }
          }
        }
      }
    ]]></query>
    <query id='selectAlarmHistory'><![CDATA[
      {
        "index" : #index#,
        "type"  : #type#,
        "body" : {
          "size" : 10,
          "sort": { "dtTransmitted": { "order": "desc" } },
          "query" : {
            "bool": {              
              "must" : [
                { "match" : { "cid" : #cid# } },
                { "match" : { "sensorType" : "alarm" } }]
            }
          }
        }
      }
    ]]></query>
    <query id='selectDashboardCompare'><![CDATA[
      {
        "index" : #index#,
        "type"  : #type#,
        "body" : {                    
          "query" : {
            "terms" : { "_id" : [##id##] }
          }
        }
      }
    ]]></query>

  </dashboard>
</queryList>
