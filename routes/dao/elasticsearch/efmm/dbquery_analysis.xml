<?xml version="1.0"?>
<queryList>
  <analysis>
    <query id='selectMachineList'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {
          "size" : 0,
          "aggs": {
            "flag": {
              "terms": {
                "field": "flag.keyword",
                "order" : { "_term" : "asc" }
              },
              "aggs": {
                "cid": {
                  "terms": {
                    "field": "cid.keyword",
                    "order" : { "_term" : "asc" }
                  }
                }
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectOeeRaw'>
      <![CDATA[
      {
        "index" : #INDEX#,
        "type"  : #TYPE#,
        "body" : {
          "size": 100000,
          "_source" : "data",
          "sort": { "dtTransmitted" : "desc" },
          "query" : {
            "bool" : {
              "filter" : {
                "range" : {
                  "dtTransmitted" : { "gte" : #START#, "lt" : #END# }
                }
              },
              "must" : [
                { "term" : { "cid" : #CID# } },
                { "term" : { "flag": #FLAG# } }
              ]
            }
          }
        }
      }
    ]]>
    </query>
    <query id='selectPatternData'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "_source" : [##LIST##],
          "query" : {
            "term" : { "_id" : #ID# }
          }
        }
      }
    ]]></query>
    <query id='selectMatchedPatternByTimestamp'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "_source" : #CID#,
          "size" : 1,
          "sort" : { #SORTFIELD# : { "order" : "desc" } },
          "query" : {
            "bool": {
              "must" : {
                "range" : {
                  #SORTFIELD#: { "gte": #START#, "lt" : #END# }
                }
              }
            }
          }
        }
      }
    ]]></query>




    <query id='selectPatternList'>
      <![CDATA[
      {
        "index": #INDEX#,
        "type": #TYPE#,
        "body": {
          "size": 10000,
          "_source" : ["_id", #RANGEFIELD# ],
          "sort": { "_uid": "desc" },
          "query" : {
            "bool" : {
              "should": [
                { "term": { "_id": #MASTER_ID# }},
                { "range": {
                    #RANGEFIELD# : {
                      "gte" : #START_TIMESTAMP#,
                      "lt" : #END_TIMESTAMP#
                    }
                  }
                }
              ]
            }
          }
        }
      }
    ]]>
    </query>
    <query id='selectMatchingPattern'>
      <![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "_source" : #CID#,
          "size"   : 10000,
          "sort" : { #CID_TIMESTAMP# : { "order" : "desc"  } },
          "query" : {
            "bool" : {
              "must" : { "match_all": {} },
               "filter" : {
                "range" : {
                  #CID_TIMESTAMP# : {
                    "gte" : #START_TIMESTAMP#,
                    "lte" : #END_TIMESTAMP#
                  }
                }
              }
            }
          }
        }
      }
    ]]>
    </query>
    <!-- get pattern data -->
    <query id='selectPatterns'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "_source" : [
            #CID_OVERALL_OEE#,
            #CID_PERFORMACE#,
            #CID_QUALITY#,
            #CID_AVAILABILITY#
            ],
          "query" : {
            "term" : { "_id" : #ID# }
          }
        }
      }
    ]]></query>
    <query id='selectClusterPattern'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "_source" : [#TARGET#],
          "size" : 10000,
          "query" : {
            "bool" : {
              "must" : {
                "match" : {"_id" : #ID# }
              }
            }
          }
        }
      }
    ]]></query>
    <!-- Pattern data update [0]-->
    <query id='updatePatternData'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "id" : #ID#,
        "body" : {
          "doc" : {
            #CID# : #BODY#
          }
        }
      }
    ]]></query>

    <!-- Pattern infomation update [0]-->
    <query id='updatePatternInfo'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "id" : #ID#,
        "body" : {
          "doc" : {
            #CID# : #BODY#
          }
        }
      }
    ]]></query>
    <query id='selectById'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "_source" : #CID#,
          "query" : {
            "term" : { "_id" : #ID# }
          }
        }
      }
    ]]></query>

    <query id='selectByIdForClusteringChart'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "_source" : [##SOURCE##],
          "query" : {
            "term" : { "_id" : #ID# }
          }
        }
      }
    ]]></query>
    <!-- Clustering -->
    <query id='selectDaClusterMasterAll'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "_source" : [##SOURCE##],
        "body" : {
          "query" : {
            "bool" : {
              "must" : { "match_all": {} },
              "filter" : {
                "range" : {
                  "da_result.da_time" : { "gte" : #START#, "lt" : #END# }
                }
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectDaClusterMaster'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "_source" : [##SOURCE##],
        "body" : {
          "query" : {
            "bool" : {
              "must" : { "match" : { interval : #INTERVAL#} },
              "filter" : {
                "range" : {
                  "master_result.da_time" : { "gte" : #START#, "lt" : #END# }
                }
              }
            }
          }
        }
      }
    ]]></query>






    <query id='selectStackingStatus'>
      <![CDATA[
      {
        "index" : #INDEX#,
        "type"  : #TYPE#,
        "body" : {
          "size": 100000,
          "_source" : [ "data" ],
          "sort": { "dtTransmitted": { "order" : "asc" } },
          "query" : {
            "bool" : {
              "must": [
                {"term" : {"cid" : #CID#}},
                {"term" : {"sensorType" : #STYPE#}}
              ],
              "filter" : {
                "range" : {
                  "dtTransmitted" : { "gte" : #START#, "lte" : #END# }
                }
              }
            }
          }
        }
      }
    ]]>
    </query>
  </analysis>
</queryList>